  <div class="right_header">
    <div class="chat_finish">
      <%= link_to 'チャットを終了する' '' %>
    </div>
  </div>
</div>

<div class="center_chat">
  <div class="one_chat">
    <div class="header_chat">
      <div class="user_name_in_chat">
        <p>murakami</p>
      </div>
      <div class="date_of_chat">
        <p>2021/12/20(Mon) 22:39</p>
      </div>
    </div>
    <div class="footer_chat">
      <div class="message_in_chat">
        <p>こんにちは</p>
      </div>
    </div>
  </div>

  <div class="one_chat">
    <div class="header_chat">
      <div class="user_name_in_chat">
        <p>Masaaki</p>
      </div>
      <div class="date_of_chat">
        <p>2021/12/20(Mon) 22:50</p>
      </div>
    </div>
    <div class="footer_chat">
      <div class="message_in_chat">
        <p>hello</p>
      </div>
    </div>
  </div>
</div>

<%= form_with model: [@room,@message], class: "bottom_chat", local: true do |f| %>
  <div class="message_form">
    <%= f.text_field :content, class: "text_form", placeholder: "type a message" %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: "hidden" %> 
    </label>
  </div>
  <%= f.submit "送信", class: "send" %>
<% end %>